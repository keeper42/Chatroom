<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:background="@drawable/side_nav_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.goal.chat.LoginActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">
            <ImageView
                android:layout_marginTop="30dp"
                android:src="@drawable/loginword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/login_bg"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="121dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:src="@drawable/people"
                    android:layout_marginLeft="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />
                <EditText
                    android:hint="账号"
                    android:textColor="@color/lintgray"
                    android:textColorHint="@color/lintgray"
                    android:maxLength="19"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#6699cc" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:src="@drawable/lock"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <EditText
                    android:hint="密码"
                    android:textColor="@color/lintgray"
                    android:inputType="textPassword"
                    android:textColorHint="@color/lintgray"
                    android:maxLength="19"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="18dp">
            <LinearLayout
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:text="前往注册"
                    android:id="@+id/register"
                    android:textColor="@color/lintgray"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="忘记密码"
                    android:layout_gravity="right"
                    android:textColor="@color/lintgray"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="登录"
                android:id="@+id/login"
                android:textColor="@color/lintgray"
                android:background="@drawable/login_bg"
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View

                    android:layout_width="80dp"
                    android:layout_height="1dip"
                    android:background="@color/lintgray" />
                <TextView
                    android:textColor="@color/lintgray"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="社交账号登录"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View

                    android:layout_width="80dp"
                    android:layout_height="1dip"
                    android:background="@color/lintgray" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/wechat"
                    android:background="@drawable/wechat"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:textColor="@color/lintgray"
                    android:text="微信"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/qq"
                    android:background="@drawable/qq"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:textColor="@color/lintgray"
                    android:text="QQ"
                    android:layout_marginTop="3dp"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/weibo"
                    android:background="@drawable/weibo"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:textColor="@color/lintgray"
                    android:text="微博"
                    android:layout_marginTop="3dp"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <com.github.glomadrian.grav.GravView
        android:id="@+id/grav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:colorGenerator="com.github.glomadrian.grav.generator.paint.ArrayColorGenerator"
        app:array_colors="@array/bubble"
        app:pointGenerator="com.github.glomadrian.grav.generator.point.RegularPointGenerator"
        app:regular_cell_size="300"
        app:regular_variance="200"
        app:gravGenerator="com.github.glomadrian.grav.generator.grav.BallGenerator"
        app:ball_from_size="10dp"
        app:ball_to_size="20dp"
        app:animationGenerators="@array/BubbleAnimations"
        app:side_to_side_min_duration="1000"
        app:side_to_side_max_duration="3000"
        app:side_to_side_direction="leftToRight"
        app:shake_direction="vertical"
        app:shake_min_duration="10000"
        app:shake_max_duration="20000"
        app:shake_variance="500dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>